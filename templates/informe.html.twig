{% block body %}
<body>
    {% include "header.html.twig" %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card border-0 shadow-lg">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4 text-primary">Creaci√≥n de informe</h2>

                        {% for flash_message in app.session.flashbag.get('Exito') %}
                            <div class="alert alert-success">{{ flash_message }}</div>
                        {% endfor %}

                        {{ form_start(vista, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                        <div class="mb-3">
                            {{ form_row(vista.observaciones, {'attr': {'class': 'form-control', 'placeholder': 'Observaciones', 'required': 'required'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(vista.dinero, {'attr': {'class': 'form-control', 'placeholder': 'Cantidad de dinero', 'required': 'required', 'type': 'number'}}) }}
                            <div class="invalid-feedback">
                                Por favor, ingresa la cantidad de dinero.
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_row(vista.imagen, {'attr': {'class': 'form-control', 'placeholder': 'URL de la imagen', 'required': 'required'}}) }}
                            <div class="invalid-feedback">
                                Por favor, ingresa la URL de la imagen.
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_row(vista.Tour, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                            <div class="invalid-feedback">
                                Por favor, selecciona un Tour.
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">Enviar</button>
                        </div>

                        {{ form_end(vista) }}

                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
{% endblock %}
</html>
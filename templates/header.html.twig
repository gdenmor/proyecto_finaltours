<header class="container-fluid d-flex bg-primary" style="padding: 0;">
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom" style="width: 100%;">
        <div class="container-fluid" style="margin-left: 2%;">
            <a class="navbar-brand" href="{{path('app_main')}}"><b>Free Tour Guide</b></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#despliega" aria-controls="navbarNav" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="despliega" class="collapse navbar-collapse justify-content-end">
                {% if app.user %}
                        {% if app.user.roles[0]=="ROLE_USER" %}
                            <ul class="navbar-nav">
                                <li class="nav-item"><a href="{{ path('app_reservas',{id_user: app.user.id}) }}" class="nav-link">MIS RESERVAS</a></li>
                            </ul>
                        {% else %}
                            {% if app.user.roles[0]=="ROLE_GUIA" %}
                                <ul class="navbar-nav">
                                    <li class="nav-item"><a href="{{path('horario',{guia_id: app.user.id})}}" class="nav-link">Mi horario</a></li>
                                    <li class="nav-item"><a href="{{path('app_lista',{id: app.user.id})}}" class="nav-link">Pasar lista</a></li>
                                    <li class="nav-item"><a href="{{path('informe_ruta',{id: app.user.id})}}" class="nav-link">Crear informe</a></li>
                                </ul>
                            {% else %}
                                <ul class="navbar-nav">
                                    <li class="nav-item"><a href="{{ path('dashboard') }}" class="nav-link">ADMIN</a></li>
                                </ul>
                            {% endif %}
                        {% endif %}
                {% endif %}

                <ul class="navbar-nav">
                    {% if app.user %}
                        <li class="nav-item"><a id="registrar" class="nav-link"><span>&#128100;</span> {{ app.user.username }}</a></li>
                        <li class="nav-item"><a href="/logout" id="registrar" class="nav-link"><span>&#xf08b;</span> LOGOUT</a></li>
                    {% else %}
                        <li class="nav-item"><a href="{{path('app_registroo')}}" id="registrar" class="nav-link"><span class="fas fa-user"></span> Sign Up</a></li>
                        <li class="nav-item"><a id="login" class="nav-link"><span class="fa fa-sign-in"></span> Login</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
</header>

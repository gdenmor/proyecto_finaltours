<!DOCTYPE html>
<html>
<head>
    <title>Hello CancelarRutasController!</title>
    <script src="{{asset('js/jquery-3.7.1.js')}}"></script>
    <script src="{{asset('js/jquery-ui.js')}}"></script>
    <link rel="stylesheet" type="text/css" href="{{asset('css/jquery-ui.css')}}">
    <link rel="stylesheet" href="{{asset('css/jquery-ui.structure.css')}}">
    <link rel="stylesheet" href="{{asset('css/jquery-ui.theme.css')}}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Titillium+Web" rel="stylesheet">
    <link rel="stylesheet" href="{{asset('css/cancelarutas.css')}}">
    <link rel="stylesheet" href="{{asset('css/landing.css')}}">
</head>

<body>
{% block body %}
{% include "header.html.twig" %}
    <h1>Cancelar tours</h1>
            <table class="listado">
                <thead>
                    <tr>
                        <th><h1>ID</h1></th>
                        <th><h1>Número reservas</h1></th>
                        <th><h1>Título</h1></th>
                        <th><h1>Estado</h1></th>
                        <th><h1>Acción</h1></th>
                    </tr>
                </thead>
                <tbody>
                {% if rutas %}
                    {% set i=0 %}
                    {% for ruta in rutas %}
                        <tr>
                            <td>{{ruta.id}}</td>
                                {% if num_reservas[loop.index-1]>10 %}
                                    <td> {{num_reservas[loop.index-1]}}</td>
                                {% else %}
                                    <td style="background-color:red;"> {{num_reservas[loop.index-1]}} (Advertencia por falta de visitantes)</td>
                                {% endif %}
                            <td>{{ruta.titulo}}</td>
                            <td>{{ruta.estado}}</td>
                            <td class="icono"><a href="{{path('app_cancela_tour',{id: ruta.id})}}"><span class="fa fa-times-circle">Cancelar</span></a></td>	
                        </tr>
                    {% endfor %}
                {% else %}
                    <p style="text-align:center;color:red;">No existen tours a cancelar en este momento</p>
                {% endif %}
                </tbody>
            </table>
{% endblock %}
</body>
</html>